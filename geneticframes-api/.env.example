# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=GeneticFrames API
DEBUG=True
PORT=8000

# NCBI Configuration
ENTREZ_EMAIL=your-email@example.com

# Supabase (Optional - can use local PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# Redis Cache (Optional - fallback to in-memory)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# AlphaFold API
ALPHAFOLD_API_URL=https://alphafold.ebi.ac.uk/api
ALPHAFOLD_ENABLED=True

# AWS S3 / Cloudflare R2 (Optional - for image storage)
S3_ENABLED=False
S3_BUCKET=geneticframes
S3_REGION=auto
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
